@{
    ViewBag.Title = "horizontal form";
}

<br />
<br />
<br />
<br />

<div class="container" ng-controller="EPController as EPCtrl">

    <form role="form" class="form-horizontal">

        <fieldset class="margin-bottom-fieldset">
            <legend class="margin-bottom-underline">Employee Details:</legend>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="firstName">First Name</label>
                </div>
                <div class="col-md-9">
                    <input type="text" id="firstName" required placeholder="First name" class="form-control" ng-model="EPCtrl.Employee.firstName" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <label for="lastName">Last Name</label>
                </div>
                <div class="col-md-9">
                    <input type="text" value="" id="lastName" placeholder="Last name" class="form-control" ng-model="EPCtrl.Employee.lastName" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <label for="department">Department</label>
                </div>
                <div class="col-md-9">
                    <select id="department" class="form-control" ></select>
                </div>
            </div>
        </fieldset>

        <fieldset class="margin-bottom-fieldset">
            <legend class="margin-bottom-underline">Perks:</legend>

            <div class="form-group">
                <div class="col-md-3">
                    <label for="car">Business Car</label>
                </div>
                <div class="col-md-9">
                    <div class="checkbox">
                        <input id="car" type="checkbox" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label for="bonus">Bonus</label>
                </div>
                <div class="col-md-9">
                    <div class="checkbox">
                        <input id="bonus" type="checkbox" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <label for="shares">Shares</label>
                </div>
                <div class="col-md-9">
                    <div class="checkbox">
                        <input id="shares" type="checkbox" />
                    </div>
                </div>
            </div>

        </fieldset>

        <fieldset class="margin-bottom-fieldset">
            <legend class="margin-bottom-underline">Payroll:</legend>

            <div class="form-group">
                <div class="col-md-3">
                    <label>Full time</label>
                </div>
                <div class="col-md-9">
                    <input name="payroll" type="radio" id="fulltime" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <label>Bonus</label>
                </div>
                <div class="col-md-9">
                    <input type="radio" name="payroll" id="parttime" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <label>Contract</label>
                </div>
                <div class="col-md-9">
                    <input type="radio" name="payroll" id="Contract" />
                </div>
            </div>

        </fieldset>

        <div class="form-group col-md-offset-2">
            <input type="submit" value="Submit" class="btn btn-primary btn-lg" ng-click="EPCtrl.submitForm()" />
        </div>

    </form>


</div>
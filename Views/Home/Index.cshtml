@{
    ViewBag.Title = "Home Page";
}

<br />
<br />
<br />
<br />

<div class="container">

    <form role="form">


        <fieldset class="margin-bottom-fieldset">
            <legend class="margin-bottom-underline">Employee Details:</legend>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" required placeholder="First name" class="form-control" />
            </div>

            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" value="" id="lastName" placeholder="Last name" class="form-control" />
            </div>

            <div class="form-group">
                <label for="department">Department</label>
                <select id="department" class="form-control"></select>
            </div>
        </fieldset>

        <fieldset class="margin-bottom-fieldset">
            <legend class="margin-bottom-underline">Payroll:</legend>
            <div class="checkbox">
                <label>Full Time<input id="fullTime" type="checkbox" /></label>
            </div>
            <div class="checkbox">
                <label>Part Time<input id="partTime" type="checkbox" /></label>
            </div>
            <div class="checkbox">
                <label>Contract<input id="contract" type="checkbox" /></label>
            </div>
        </fieldset>

        <fieldset class="margin-bottom-fieldset">
            <legend class="margin-bottom-underline">Perks:</legend>

            <div class="radio">
                <label>Business Car<input name="perks" type="radio" id="perk-car" /></label>
            </div>

            <div class="radio">
                <label>Bonus<input type="radio" name="perks" id="perk-bonus" /></label>
            </div>

            <div class="radio">
                <label>Shares<input type="radio" name="perks" id="perk-sharaes" /></label>
            </div>
        </fieldset>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
        </div>

    </form>


</div>